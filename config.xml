<?xml version="1.0"?>
<extension>
    <id>paystack</id>
    <version>1.0.0</version>
    <type>payment</type>
    <category>payment</category>
    <cartversions>
        <item>1.2</item>
    </cartversions>
    <layout></layout>
    <priority>10</priority>
    <settings>
        <item id="paystack_sandbox">
            <type>selectbox</type>
            <variants>
                <item>test</item>
                <item>live</item>

            </variants>
        </item>
        <item id="paystack_prtk">
            <type required="true">input</type>
        </item>
        <item id="paystack_putk">
            <type required="true">input</type>
        </item>
        <item id="paystack_prlk">
            <type>input</type>
        </item>
        <item id="paystack_pulk">
            <type>input</type>
        </item>
        <!-- <item id="paystack_customimg">
            <type>input</type>
        </item> -->
        <!-- <item id="paystack_customdesc">
            <type>input</type>
        </item> -->
        <item id="paystack_order_status_id">
            <type>selectbox</type>
            <variants>
                <item>1</item>
                <item>2</item>
                <item>5</item>
            </variants>
            <default_value>2</default_value>
        </item>
    </settings>
    <note>true</note>
    <custom_settings_template>pages/extension/paystack.tpl</custom_settings_template>
</extension>
